<%= form_for @split, :as => :split, :html => {:class => "navbar-form form-inline hidden-phone" } do |f| %>
  <div class="input-prepend input-append">
    <%= content_tag :span, "Split", :class => "add-on" %>
    <%= text_field :split, :amount, :class => "input-mini", :placeholder => "100" %>
    <%= content_tag :span, "for", :class => "add-on" %>
    <%= text_field :split, :note, :class => "input-large", :placeholder => "Takeout" %>
    <%= content_tag :span, "with", :class => "add-on" %>
    <%= text_field :split, :with, :class => "input-large", :placeholder => "Foo Bar, Bar Foo" %>
    <%= submit_tag "Split it up!", :class => "btn btn-primary" %>
  </div>
<% end %>