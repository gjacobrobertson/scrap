<%= form_for @split, :as => :split, :html => {:class => "form-inline" } do |f| %>
  <div id="split-wrapper">
    <table>
      <tr class="row-fluid">
        <td class="label-wrapper">
          <%= content_tag :label, "Split"%>
        </td>
        <td class="input-wrapper">
          <%= text_field :split, :amount, :placeholder => "100" %>
        </td>
      </td>
      <tr class="row-fluid">
        <td class="label-wrapper">
          <%= content_tag :label, "for" %>
        </td>
        <td class="input-wrapper">
          <%= text_field :split, :note, :placeholder => "Takeout" %>
        </td>
      </tr>
      <tr class="row-fluid">
        <td class="label-wrapper">
          <%= content_tag :label, "with" %>
        </td>
        <td class="input-wrapper">
          <%= text_field :split, :with, :placeholder => "Foo Bar, Bar Foo" %>
        </td>
      </tr>
    </table>
    <%= submit_tag "Split it up!", :class => "btn btn-primary" %>
  </div>
<% end %>