<%= provide(:pagetitle, "Home") %>
<div class="row">
  <div class="span6">
    <div class="well">
      <h2>My Debts</h2>
      <ul>
        <% @user.users.each do |user| %>
          <li>
          <%= render "users/debt", :user => user %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="span6">
    <div class="well">
      <h2>My Groups</h2>
      <%= link_to "Create new group", new_group_path, :class => 'btn btn-primary' %>
      <ul>
        <%= render @user.groups %>
      </ul>
    </div>
  </div>
</div>
