<div class="row-fluid">
  <div class="span12">
    <div class="total">
      <h1><%= format_amount current_user.total_net%></h1>
      <p>Net</p>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h2><%= format_amount current_user.total_credit%></h2>
    <p>Owed to you</p>
    <ul class="debt-list">
      <%= render :partial => "shared/credit", :collection => current_user.credit_subtotals, :as => :credit%>
    </ul>
  </div>

  <div class="span6">
    <h2><%=format_amount current_user.total_debt%></h2>
    <p>Owed by you</p>
    <ul class="debt-list">
      <%= render :partial => "shared/debt", :collection => current_user.debt_subtotals, :as => :debt%>
    </ul>
  </div>
</div>
