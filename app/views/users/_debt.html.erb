<% if current_user.owes(user) - user.owes(current_user) >= 0.01 %>
  You owe <%= link_to user.name, user %>
  <%= " #{number_to_currency(current_user.owes(user) - user.owes(current_user))}" %>
<% elsif user.owes(current_user) - current_user.owes(user) >= 0.01%>
  <%= link_to user.name, user %>
  owes you <%= " #{number_to_currency(user.owes(current_user) - current_user.owes(user))}" %>
<% else %>
  There is no debt between you and <%= user.name %>
<% end %>
