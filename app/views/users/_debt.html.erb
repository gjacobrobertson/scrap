<% if current_user.owes(user) > user.owes(current_user) %>
  <span><%= "You owe #{user.name} #{number_to_currency(current_user.owes(user) - user.owes(current_user))}" %></span>
<% elsif user.owes(current_user) > current_user.owes(user) %>
  <span><%= "#{user.name} owes you #{number_to_currency(user.owes(current_user) - current_user.owes(user))}" %></span>
<% end %>
